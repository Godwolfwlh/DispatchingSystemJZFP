<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWil"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/header_title_bg"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w">

        <ImageView
            android:layout_width="40px"
            android:layout_height="34px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_base_info"
            app:layout_marginLeftPercent="3%" />

        <TextView
            android:id="@+id/poor_head_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/poor_details_basic_name"
            android:textSize="18dp"
            app:layout_marginLeftPercent="3%w" />

        <TextView
            android:id="@+id/poor_head_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/poor_details_basic_edit"
            android:textSize="18dp"
            app:layout_marginRightPercent="3%w" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWil"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/poor_head_img_head"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="34%w"
            app:layout_marginPercent="3%w"
            app:layout_widthPercent="24%w" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_marginPercent="3%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginTopPercent="6%w">

                <TextView
                    android:id="@+id/poor_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/poor_head_name_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    app:layout_marginLeftPercent="3%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginTopPercent="3%w">

                <TextView
                    android:id="@+id/poor_head_num_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人数："
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/poor_head_num_people_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    app:layout_marginLeftPercent="3%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginTopPercent="3%w">

                <TextView
                    android:id="@+id/poor_head_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="致贫原因："
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/poor_head_reason_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    app:layout_marginLeftPercent="3%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginTopPercent="3%w">

                <TextView
                    android:id="@+id/poor_head_attribute_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农民属性："
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/poor_head_attribute_i_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    app:layout_marginLeftPercent="3%w" />

            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_marginPercent="3%w">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/poor_head_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="联系电话："
                android:textSize="8pt" />

            <TextView
                android:id="@+id/poor_head_telephone_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="8pt" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginTopPercent="3%w">

            <TextView
                android:id="@+id/poor_head_paper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="户主证件："
                android:textSize="8pt" />

            <TextView
                android:id="@+id/poor_head_paper_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="8pt" />

        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginTopPercent="3%w">

            <TextView
                android:id="@+id/poor_head_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="联系地址："
                android:textSize="8pt" />

            <TextView
                android:id="@+id/poor_head_address_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="8pt" />

        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>