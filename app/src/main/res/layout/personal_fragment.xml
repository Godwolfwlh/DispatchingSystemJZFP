<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/activity_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="12%w"
        />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/bg_person"
        app:layout_heightPercent="40%h">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90FFFFFF"
            android:orientation="vertical">

            <com.yhzhcs.dispatchingsystemjzfp.view.CircleImageView
                android:id="@+id/personal_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/img_person"
                app:civ_border_color="#20000000"
                app:civ_border_width="20px"
                app:layout_heightPercent="35%w"
                app:layout_marginTopPercent="4%w"
                app:layout_widthPercent="35%w" />

            <TextView
                android:id="@+id/personal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:gravity="center"
                android:text="零时用户"
                android:textColor="@color/colorWil"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/personal_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:gravity="center"
                android:textColor="@color/colorWil"
                android:textSize="10pt" />

        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/basic_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWil"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/basic_image"
            android:layout_width="44px"
            android:layout_height="44px"
            android:src="@mipmap/icon_base_information"
            app:layout_marginBottomPercent="6%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginRightPercent="8%"
            app:layout_marginTopPercent="6%" />

        <TextView
            android:id="@+id/basic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/basic_document"
            android:textSize="11pt" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/modify_the_password_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWil"
        android:orientation="horizontal"
        app:layout_marginTopPercent="3%">

        <ImageView
            android:id="@+id/modify_the_password_image"
            android:layout_width="44px"
            android:layout_height="44px"
            android:src="@mipmap/icon_password"
            app:layout_marginBottomPercent="6%"
            app:layout_marginLeftPercent="8%"
            app:layout_marginRightPercent="8%"
            app:layout_marginTopPercent="6%" />

        <TextView
            android:id="@+id/modify_the_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/modify_the_password"
            android:textSize="11pt" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <Button
        android:id="@+id/personal_ent_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_button_bg"
        android:text="退出登入"
        android:textColor="@color/colorWil"
        android:textSize="11pt"
        app:layout_marginPercent="3%" />

</com.zhy.android.percent.support.PercentLinearLayout>