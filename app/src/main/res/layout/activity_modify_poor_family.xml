<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWil"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:text="姓名"
            android:textSize="10pt" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/bg_line" />

        <EditText
            android:id="@+id/mod_poor_family_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="名字"
            android:textColor="@color/sliding_left_normal"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="10pt" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWil"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:text="性别"
            android:textSize="10pt" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/bg_line" />

        <EditText
            android:id="@+id/mod_poor_family_sex"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="性别"
            android:textColor="@color/sliding_left_normal"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="10pt" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWil"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:text="年龄"
            android:textSize="10pt" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/bg_line" />

        <EditText
            android:id="@+id/mod_poor_family_age"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="年龄"
            android:textColor="@color/sliding_left_normal"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="10pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:text="岁"
            android:textSize="10pt" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/mod_poor_family_withnelation_linear"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWil"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:text="与户主关系"
            android:textSize="10pt" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/bg_line" />

        <EditText
            android:id="@+id/mod_poor_family_withnelation"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="与户主关系"
            android:textColor="@color/sliding_left_normal"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="10pt" />
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorWil"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:text="健康状况"
            android:textSize="10pt" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/bg_line" />

        <EditText
            android:id="@+id/mod_poor_family_health"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="健康状况"
            android:textColor="@color/sliding_left_normal"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="10pt" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</LinearLayout>