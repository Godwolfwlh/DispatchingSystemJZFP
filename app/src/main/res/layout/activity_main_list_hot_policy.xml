<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWil"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hot_pol_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:text="全国扶贫工作宣传会议成功在北京召开，习近平主席参加"
        android:textSize="10pt"
        app:layout_marginPercent="3%w" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hot_pol_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="3dp"
            android:text="政策"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="8pt"
            app:layout_marginPercent="3%w" />

        <TextView
            android:id="@+id/hot_pol_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布人"
            android:textSize="8pt"
            app:layout_marginPercent="3%w" />

        <TextView
            android:id="@+id/hot_pol_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-1-12"
            android:textColor="@color/colorGray"
            android:textSize="8pt"
            app:layout_marginPercent="3%w" />

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>