<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWil"
    android:orientation="vertical">

    <TextView
        android:id="@+id/primary_products_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="凯里市品山乡白木白菜"
        android:textSize="11pt"
        app:layout_marginPercent="3%w" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/primary_products_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/img_vegetables"
            app:layout_heightPercent="30%w"
            app:layout_marginLeftPercent="3%"
            app:layout_marginRightPercent="2%"
            app:layout_widthPercent="30%w" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="3%w">

                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_money_1"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w" />

                <TextView
                    android:id="@+id/primary_products_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.00"
                    android:textColor="@color/colorOrange"
                    android:textSize="10pt"
                    app:layout_marginLeftPercent="3%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/斤"
                    android:textSize="10pt" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginPercent="3%w">

                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_person"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w" />

                <TextView
                    android:id="@+id/primary_products_farmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刘向阳"
                    android:textSize="10pt"
                    app:layout_marginLeftPercent="3%" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_time"
                    app:layout_marginRightPercent="3%w" />

                <TextView
                    android:id="@+id/primary_products_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-2-26"
                    android:textSize="10pt"
                    app:layout_marginLeftPercent="3%" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginLeftPercent="3%w">

                <ImageView
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_tel"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w" />

                <TextView
                    android:id="@+id/primary_products_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15985555555"
                    android:textSize="10pt"
                    app:layout_marginLeftPercent="3%" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginPercent="3%w">

                <TextView
                    android:id="@+id/primary_products_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/greens_text_bg"
                    android:paddingBottom="6dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="6dp"
                    android:text="蔬菜"
                    android:textColor="@color/colorGray"
                    android:textSize="10pt"
                    app:layout_marginLeftPercent="3%w" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/primary_products_adds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平原县"
                    android:textColor="@color/colorGray"
                    android:textSize="10pt"
                    app:layout_marginLeftPercent="3%" />

            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>