<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/header_title_bg"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="100%w">

        <TextView
            android:id="@+id/poor_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="@string/poor_list_item_name"
            android:textSize="16dp"
            app:layout_marginLeftPercent="3%w" />

        <TextView
            android:id="@+id/poor_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_gules_bg"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/poor_list_item_delete"
            android:textColor="@color/colorGules"
            android:textSize="14dp"
            app:layout_marginRightPercent="3%w" />

    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_heightPercent="40%w"
        app:layout_widthPercent="100%w">

        <ImageView
            android:id="@+id/poor_item_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/mmspic_back"
            app:layout_heightPercent="34%w"
            app:layout_marginPercent="3%w"
            app:layout_widthPercent="24%w" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_heightPercent="40%w"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginTopPercent="8%w"
                app:layout_marginBottomPercent="3%w"
                app:layout_marginLeftPercent="3%w"
                app:layout_marginRightPercent="3%w">

                <ImageView
                    android:id="@+id/poor_item_icon_family"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:src="@mipmap/icon_family"
                    android:layout_marginTop="2dp"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w" />

                <TextView
                    android:id="@+id/poor_item_family_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/colorTitle"
                    android:textSize="16dp"
                    app:layout_marginLeftPercent="3%" />

                <TextView
                    android:id="@+id/poor_item_family_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/poor_item_icon_thing"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/icon_poor_thing"
                    app:layout_marginLeftPercent="25%w" />

                <TextView
                    android:id="@+id/poor_item_thing_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缺技术"
                    android:textSize="16dp"
                    app:layout_marginLeftPercent="3%"
                    app:layout_marginRightPercent="3%" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginPercent="3%w">

                <ImageView
                    android:id="@+id/poor_item_icon_income"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:src="@mipmap/icon_income"
                    android:layout_marginTop="2dp"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w" />

                <TextView
                    android:id="@+id/poor_item_income_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/poor_item_icon_income"
                    android:layout_toRightOf="@id/poor_item_icon_income"
                    android:text="1000"
                    android:textColor="@color/colorTitle"
                    android:textSize="16dp"
                    app:layout_marginLeftPercent="3%" />

                <TextView
                    android:id="@+id/poor_item_income_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/poor_item_income_num"
                    android:layout_toRightOf="@id/poor_item_income_num"
                    android:text="元/人"
                    android:textSize="16dp" />

            </com.zhy.android.percent.support.PercentLinearLayout>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_marginPercent="3%w">

                <ImageView
                    android:id="@+id/poor_item_icon_address"
                    android:layout_width="54px"
                    android:layout_height="54px"
                    android:src="@mipmap/icon_address"
                    app:layout_marginLeftPercent="3%w"
                    app:layout_marginRightPercent="3%w"
                    android:layout_marginTop="2dp"
                    />

                <TextView
                    android:id="@+id/poor_item_adderss_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="凯里市铜仁乡平远县毛家村马甲胡同125号"
                    android:textSize="16dp"
                    app:layout_marginLeftPercent="3%"/>

            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentLinearLayout>